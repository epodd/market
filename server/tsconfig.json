{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "../node_modules", "**/*.spec.ts"]
}